<Window x:Class="CollaborativeFilteringUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Collaborative Filtering" Height="350" Width="525" WindowState="Maximized">
    <DockPanel>
        <TabControl DockPanel.Dock="Top" FontSize="20">
            <TabItem Header="Rekomendacje">
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding GetRecommendationValue}" IsEnabled="{Binding IsResponsive}">Sprawdź wartość rekomentacji</Button>
                    <Button Command="{Binding Recommend}" IsEnabled="{Binding IsResponsive}">Zarekomenduj filmy dla użytkownika</Button>
                </StackPanel>
                
            </TabItem>
            <TabItem Header="Dane">
                <StackPanel Orientation="Horizontal">
                <Button Command="{Binding LoadData}" IsEnabled="{Binding IsResponsive}">Wczytaj dane z plików</Button>
                    <Button Command="{Binding AddMovie}" IsEnabled="{Binding IsResponsive}">Dodaj nowy film</Button>
                    <Button Command="{Binding AddUser}" IsEnabled="{Binding IsResponsive}">Dodaj nowego użytkownika</Button>
                    <Button Command="{Binding AddRating}" IsEnabled="{Binding IsResponsive}">Dodaj nową ocenę</Button>
                </StackPanel>
            </TabItem>
            
        </TabControl>
        
        <ContentControl Content="{Binding View}" Margin="10"/>
    </DockPanel>

</Window>
